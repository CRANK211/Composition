<local:BaseEffectControl
    x:Class="EffectsDemoApp.Effects.BlurEffectControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EffectsDemoApp.Effects"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Slider x:Name="BlurSlider"
                Minimum="0"
                Maximum="100"
                Header="Blur Amount"
                Margin="12"
                Value="32"
                ValueChanged="BlurSlider_OnValueChanged"></Slider>
    </Grid>
</local:BaseEffectControl>
